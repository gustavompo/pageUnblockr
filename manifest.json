{
    "manifest_version": 2,
    "name": "unmodal-it",
    "version": "0.0.1",
    "description": "Chrome extension to remove page's blocking modals",
    "icons": {
        "16": "content/duster16.png",
        "32": "content/duster32.png",
        "48": "content/duster48.png",
        "128": "content/duster128.png"
    },
    "page_action": {
        "default_icon": {
            "19": "content/duster19.png",
            "38": "content/duster38.png"
        },
        "default_title": "Unmodal boring page's modals!"
    },
    "author": "Gustavo Maloste",
    "background": {
        "scripts": ["scripts/unmodalit-background.js"],
        "persistent": false
    },
    "permissions": [
        "<all_urls>",
        "http://*/*",
        "https://*/*",
        "tabs"
    ]

}
